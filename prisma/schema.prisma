generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URI")
}

model Customer {
    id               String            @id @default(auto()) @map("_id") @db.ObjectId
    surname          String
    otherNames       String
    role             Role              @default(User)
    email            String            @unique
    address          String?
    gender           Gender?
    membership_fee   String            @default("0")
    cardImage        File?
    nationality      String?
    cardType         cardType?
    homeAddress      String?
    officeAddress    String?
    telephone        String?
    photograph       File?
    guarantors       Guarantor[]
    entry_date       DateTime?         @default(now())
    status           UserStatus
    modmin           Modmin            @relation(fields: [modminId], references: [id], onDelete: Cascade)
    modminId         String            @db.ObjectId
    loanApplications LoanApplication[]
    createdAt        DateTime          @default(now())
    updatedAt        DateTime          @updatedAt
}

model Guarantor {
    id                String   @id @default(auto()) @map("_id") @db.ObjectId
    name              String
    email             String   @unique
    address           String
    gender            Gender?
    cardType          String?
    cardImage         File?
    photograph        File?
    nationality       String?
    placeOfWork       String?
    addressOfBusiness String?
    homeAddress       String?
    telephone1        String?
    telephone2        String?
    positionHeld      String?
    customer          Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
    customerId        String   @db.ObjectId
    createdAt         DateTime @default(now())
    updatedAt         DateTime @updatedAt
}

model Modmin {
    id               String            @id @default(auto()) @map("_id") @db.ObjectId
    email            String            @unique
    surname          String
    otherNames       String?
    password         String
    gender           Gender
    role             Role
    status           UserStatus
    customers        Customer[]
    loanApplications LoanApplication[]
    createdAt        DateTime          @default(now())
    updatedAt        DateTime          @updatedAt
}

model LoanCategory {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    name      String
    amount    Float    @default(0.0)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model LoanApplication {
    id               String      @id @default(auto()) @map("_id") @db.ObjectId
    loanType         LoanType?
    loanAmount       Float       @default(0.0)
    managementFee    Float?      @default(0.0)
    applicationFee   Float?      @default(3000.0)
    equity           Float?      @default(0.0)
    disbursedDate    DateTime
    loanTenure       Int
    preLoanAmount    Float?
    preLoanTenure    String?
    officeAddress    String
    salaryDate       DateTime?
    salaryAmount     Float?
    bankName         String?
    bankAccNumber    String?
    outstandingLoans YesNo?
    remarks          LoanRemark? @default(PENDING)
    modmin           Modmin      @relation(references: [id], fields: [modminId])
    modminId         String      @db.ObjectId
    customer         Customer    @relation(fields: [customerId], references: [id], onDelete: Cascade)
    customerId       String      @db.ObjectId
    createdAt        DateTime    @default(now())
    updatedAt        DateTime    @updatedAt
}

enum Role {
    User
    Moderator
    Admin
}

enum Gender {
    Male
    Female
}

enum LoanType {
    SalaryLoan
    AssetFinancing
    SME
}

enum cardType {
    NIN
    VotersCard
    DriversLicense
    InternationalPassport
}

enum YesNo {
    Yes
    No
}

enum UserStatus {
    active
    suspended
}

enum LoanRemark {
    PAID
    PENDING
}

type File {
    idx        String @default(uuid())
    public_id  String
    secure_url String
}
